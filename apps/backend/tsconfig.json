{
  "extends": "@asksync/typescript-config/base.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["./convex/*"]
    }
  },
  "include": ["convex/**/*", "tests/**/*", "vitest.config.ts"],
  "exclude": ["convex/_generated/**/*"]
}
